<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingHorizontal="15dp"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="搜索历史"
        android:textSize="20dp" />

    <com.kongzue.stacklabelview.StackLabel
        android:id="@+id/stackLabelView"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        app:deleteButton="false"
        app:selectTextColor="@color/colorAccent"
        app:deleteButtonImage="@mipmap/img_delete"
        app:itemMargin="4dp"
        app:paddingHorizontal="12dp"
        app:paddingVertical="8dp"
        app:textColor="#e6000000"
        app:textSize="12dp" />

    <Switch
        android:id="@+id/switchDelete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="15dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        android:text="删除模式 "
        android:textColor="@color/colorPrimary" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/edit_maxNum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="最大可选数量"
            android:inputType="number"
            android:textSize="14dp" />

        <Switch
            android:id="@+id/switchSelect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:text="选择模式 "
            android:textColor="@color/colorPrimary" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/edit_add"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="添加标签"
            android:textSize="14dp" />

        <Button
            android:id="@+id/btn_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="添加" />

    </LinearLayout>

    <com.kongzue.stacklabelview.StackLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:itemMargin="4dp"
        android:layout_weight="1">

        <TextView
            android:layout_width="110dp"
            android:layout_height="40dp"
            android:padding="10dp"
            android:gravity="center"
            android:background="#FFD4D4"
            android:text="文本1" />

        <TextView
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:padding="10dp"
            android:gravity="center"
            android:background="#FDFFB8"
            android:text="文本2" />

        <TextView
            android:layout_width="130dp"
            android:layout_height="40dp"
            android:padding="10dp"
            android:gravity="center"
            android:background="#D3F1FF"
            android:text="文本3" />

        <TextView
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:padding="10dp"
            android:gravity="center"
            android:background="#FFFCD6"
            android:text="文本4" />

        <TextView
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:padding="10dp"
            android:gravity="center"
            android:background="#FFD4E3"
            android:text="文本5" />

        <TextView
            android:layout_width="110dp"
            android:layout_height="40dp"
            android:padding="10dp"
            android:gravity="center"
            android:background="#C9FFE5"
            android:text="文本6" />

        <!--子布局-->

    </com.kongzue.stacklabelview.StackLayout>

</LinearLayout>